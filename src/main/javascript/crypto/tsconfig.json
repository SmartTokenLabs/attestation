{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "node_modules"
  ]
}
